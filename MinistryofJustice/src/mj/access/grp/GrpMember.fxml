<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="5.0" stylesheets="/borderpane.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox spacing="5.0">
         <children>
            <TableView fx:id="grp" editable="true" maxWidth="300.0" prefWidth="250.0">
              <columns>
                <TableColumn fx:id="id" maxWidth="100.0" prefWidth="78.0" text="ИД" />
                <TableColumn fx:id="name" prefWidth="170.0" text="Название группы" />
              </columns>
            </TableView>
            <TabPane prefHeight="500.0" prefWidth="600.0" styleClass="floating" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Пользователи">
                     <content>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <HBox spacing="5.0">
                                 <children>
                                    <TitledPane animated="false" collapsible="false" text="Пользователи в группе">
                                       <content>
                                          <VBox>
                                             <children>
                                                <TableView fx:id="usrin" prefWidth="250.0">
                                                  <columns>
                                                    <TableColumn fx:id="in_login" prefWidth="77.0" text="Логин" />
                                                    <TableColumn fx:id="in_fio" prefWidth="171.0" text="ФИО" />
                                                  </columns>
                                                   <columnResizePolicy>
                                                      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                   </columnResizePolicy>
                                                </TableView>
                                             </children>
                                          </VBox>
                                       </content>
                                    </TitledPane>
                                    <ToolBar orientation="VERTICAL">
                                       <items>
                                          <Button mnemonicParsing="false" onAction="#addusr" text="&lt;" />
                                          <Button mnemonicParsing="false" onAction="#deleteusr" text="&gt;" />
                                       </items>
                                    </ToolBar>
                                    <TitledPane animated="false" collapsible="false" layoutX="10.0" layoutY="10.0" text="Пользователи вне группы">
                                       <content>
                                          <VBox>
                                             <children>
                                                <TableView fx:id="usrout" prefWidth="250.0">
                                                   <columnResizePolicy>
                                                      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                   </columnResizePolicy>
                                                   <columns>
                                                      <TableColumn fx:id="out_login" prefWidth="77.0" text="Логин" />
                                                      <TableColumn fx:id="out_fio" prefWidth="171.0" text="ФИО" />
                                                   </columns>
                                                </TableView>
                                             </children>
                                          </VBox>
                                       </content>
                                    </TitledPane>
                                 </children>
                                 <VBox.margin>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </VBox.margin>
                              </HBox>
                           </children>
                        </VBox>
                     </content>
                </Tab>
              </tabs>
            </TabPane>
         </children>
      </HBox>
      <ToolBar>
        <items>
          <Button mnemonicParsing="false" onAction="#add" text="Добавить" />
            <Button mnemonicParsing="false" onAction="#adit" text="Редактировать" />
            <Button mnemonicParsing="false" onAction="#delete" text="Удалить" />
        </items>
      </ToolBar>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
