<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane stylesheets="/ScrPane.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
	<children>
      <BorderPane prefHeight="600.0" prefWidth="600.0">
         <center>
            <TextArea fx:id="TriggerText" editable="false" styleClass="mylistview" BorderPane.alignment="CENTER">
               <font>
                  <Font size="13.0" />
               </font>
            </TextArea>
         </center>
         <StackPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </StackPane.margin>
         <bottom>
            <ButtonBar prefHeight="40.0" BorderPane.alignment="CENTER">
               <buttons>
                <Button mnemonicParsing="false" onAction="#Execute" text="Выполнить" />
                  <Button mnemonicParsing="false" onAction="#Cencel" text="Отмена" />
               </buttons>
            </ButtonBar>
         </bottom>
      </BorderPane>

	</children>
</StackPane>
