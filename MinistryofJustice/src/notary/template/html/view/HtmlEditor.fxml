<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.HTMLEditor?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="700.0" prefWidth="900.0" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.291" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ToolBar>
        <items>
          <Button mnemonicParsing="false" onAction="#ViewHtmlTag">
               <graphic>
                  <FontAwesomeIconView fontSmoothingType="LCD" glyphName="FILE_CODE_ALT" size="18" />
               </graphic>
               <font>
                  <Font size="10.0" />
               </font>
               <tooltip>
                  <Tooltip text="Показать html" />
               </tooltip>
            </Button>
            <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#HtmlToView">
               <graphic>
                  <FontAwesomeIconView fontSmoothingType="LCD" glyphName="FILE_WORD_ALT" size="18" />
               </graphic>
               <font>
                  <Font size="10.0" />
               </font>
               <tooltip>
                  <Tooltip text="Добавить поле" />
               </tooltip>
            </Button>
        </items>
         <VBox.margin>
            <Insets left="-5.0" right="-5.0" top="-5.0" />
         </VBox.margin>
      </ToolBar>
      <SplitPane fx:id="Split" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" orientation="VERTICAL" VBox.vgrow="ALWAYS">
         <items>
            <TabPane prefHeight="200.0" prefWidth="200.0" styleClass="floating" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Editor">
                     <content>
                        <HTMLEditor fx:id="VisHtml" htmlText="" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="100.0" styleClass="mylistview" stylesheets="/ScrPane.css" />
                     </content>
                </Tab>
                <Tab fx:id="HtmlTag" text="HTML" />
              </tabs>
            </TabPane>
         </items>
      </SplitPane>
      <ButtonBar>
        <buttons>
          <Button mnemonicParsing="false" onAction="#OK" text="Сохранить" />
            <Button layoutX="737.0" layoutY="10.0" mnemonicParsing="false" onAction="#CENCEL" text="Отмена" />
        </buttons>
      </ButtonBar>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
