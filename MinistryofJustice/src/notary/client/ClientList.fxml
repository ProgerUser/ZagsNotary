<?xml version="1.0" encoding="UTF-8"?>

<?import com.jyloo.syntheticafx.XTableColumn?>
<?import com.jyloo.syntheticafx.XTableView?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="5.0" xmlns="http://javafx.com/javafx/8.0.261" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ToolBar>
        <items>
          <Button mnemonicParsing="false" onAction="#Add">
               <graphic>
                  <FontAwesomeIconView fontSmoothingType="LCD" glyphName="PLUS" size="18" />
               </graphic>
               <font>
                  <Font size="10.0" />
               </font></Button>
            <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#Edit">
               <graphic>
                  <FontAwesomeIconView fontSmoothingType="LCD" glyphName="EDIT" size="18" />
               </graphic>
               <font>
                  <Font size="10.0" />
               </font>
            </Button>
            <Button layoutX="43.0" layoutY="10.0" mnemonicParsing="false" onAction="#Delete">
               <graphic>
                  <FontAwesomeIconView fontSmoothingType="LCD" glyphName="TRASH_ALT" size="18" />
               </graphic>
               <font>
                  <Font size="10.0" />
               </font>
            </Button>
            <Separator orientation="VERTICAL" />
            <Button layoutX="79.0" layoutY="10.0" mnemonicParsing="false" onAction="#Refresh">
               <graphic>
                  <FontAwesomeIconView fontSmoothingType="LCD" glyphName="REFRESH" size="18" />
               </graphic>
               <font>
                  <Font size="10.0" />
               </font>
            </Button>
        </items>
         <VBox.margin>
            <Insets left="-5.0" right="-5.0" top="-5.0" />
         </VBox.margin>
      </ToolBar>
      <XTableView prefWidth="800.0">
         <columns>
            <XTableColumn fx:id="CLI_ID" prefWidth="75.0" text="ИД" />
            <XTableColumn fx:id="CLI_OPER" prefWidth="96.0" text="Пользователь" />
            <XTableColumn fx:id="CR_DATE" prefWidth="96.0" text="Дата" />
            <XTableColumn fx:id="CR_TIME" prefWidth="96.0" text="Время" />
            <XTableColumn fx:id="CLI_NAME" prefWidth="232.0" text="Наименование" />
         </columns>
      </XTableView>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
